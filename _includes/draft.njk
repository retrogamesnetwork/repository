---
layout: base.njk
---

<div class="callout">
	<div class="bp3-callout bp3-intent-success">
	  <h1 class="bp3-heading">{{shortTitle}} | Play | Download | Fork </h1>
	  <div class="actions">
		<a class="bp3-button bp3-minimal bp3-intent-primary bp3-icon-play" href="/en/my/{{bundleUrl}}" target="_self" type="button">
			Play online
		</a>
		<a class="bp3-button bp3-minimal bp3-intent-primary bp3-icon-fork" href="/en/studio/{{bundleUrl}}" target="_self" type="button">
			Fork in Game Studio
		</a>
	  </div>
	</div>
</div>

<div class="callout">
	<div class="bp3-callout">
	  <h4 class="bp3-heading">Screenshots</h4>
	  <div class="screenshots">
        {% for item in screenshots %}
    		<img src="{{item}}" alt="screenshot" />
  		{% endfor %}
      </div>
	</div>
</div>

<div class="callout">
	<div class="bp3-callout bp3-running-text">
	  <h4 class="bp3-heading">Description</h4>
	  <p>{{description}}</p>
	</div>
</div>